<div class="container" style="margin-top: 10vmin">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-5">
      <div class="well">
        <div class="movie-title" style="text-align: center">
          <p><%= link_to "#{current_user.username}",user_path(current_user.id),class:"text text-primary",style: "font-size:3vmin;text-align:center" %></p>
        </div>
        <div class="img img-responsive img-rounded center" style="padding-bottom: 3vmin">
          <%= link_to image_tag 'doc.png' %>
        </div>

        <div class="table-responsive">
          <table class="table table-bordered">
            <tr>
              <th class="info" style="text-align: center"><%= link_to 'My Profile' ,user_path(current_user.id)%></th>
              <th class="warning" style="text-align: center"> <%= link_to 'Edit Profile' ,edit_user_path(current_user.id)%></th>
              <th class="success" style="text-align: center"> <%= link_to 'Messages' ,messages_path%></th>
            </tr>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>