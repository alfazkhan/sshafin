<h1 class="main-head">Get In</h1>
<br><br>

<%= form_for(:session, :html => {class:"form-horizontal",role:"form"},url: login_path)  do |b| %>
  <div class="form-horizontal">


    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :UserName %>
      </div>
      <div class="col-sm-10">
        <%= b.text_field :username, class:"form-control", placeholder:"Suhail Jafri", autofocus: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :Password %>
      </div>
      <div class="col-sm-10">
        <%= b.password_field :password, class:"form-control" , placeholder:"********", autocomplete:"off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= b.submit "Login" ,class:"btn btn-primary lo-lg"%>
      </div>
    </div>
  </div>
<%end %>