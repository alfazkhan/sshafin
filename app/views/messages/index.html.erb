<div style="height: 15vmin"></div>


<div style="text-align: center">
  <%= will_paginate @message %>
</div>

<%if flash[:danger] %>
  <div class="alert alert-danger alert-dismissible">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= flash[:danger] %>
  </div>
<%end %>


<div class="container">
  <h1 style="font-size: 5vmin;text-align: center;padding-bottom: 10vmin">Received Messages</h1>
    <div class="row">
      <% @message.each do |message| %>
        <div class="col-xs-offset-2 col-xs-8">
            <div class="well well-lg" style="background-color: #f2f2f2">
                <div class="movie-title">
                    <p style="text-align: center;font-size: 3vmin"><%= link_to "#{message.name}", message_path(message),class: "text text-primary"  %></p>
                </div>

                <div class="movie-body">
                  <div class="row">
                    <div class="col-xs-12">
                      <p class="text text-justify" style="word-wrap:break-word"><%=message.message.to_s %></p>
                    </div>
                   </div>
                </div>
                  <hr>
                    <div class="message-meta-details">
          <small>
            <p style="text-align: center;"> Sent: <%=time_ago_in_words(message.created_at)%> Ago</p>
          </small>
        </div>



      <%=link_to 'Delete', delete_message_path(message), data:{confirm: "Are you Sure?"},class: "btn btn-xs btn-danger btn-block" %>


    </div>
  </div>

<%end %>
</div>

</div>

